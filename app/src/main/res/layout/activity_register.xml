<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="昵   称："
                android:textSize="@dimen/activity_text_size"/>

            <EditText
                android:id="@+id/et_register_emp_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="例如：stupidman"
                android:singleLine="true"
                android:textSize="@dimen/activity_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="员工号："
                android:textSize="@dimen/activity_text_size"/>

            <EditText
                android:id="@+id/et_register_emp_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请正确输入员工号，例如：E00001"
                android:singleLine="true"
                android:textSize="@dimen/activity_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="员工姓名"
                android:textSize="@dimen/activity_text_size"/>

            <EditText
                android:id="@+id/et_register_emp_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请正确输入姓名，例如：张三"
                android:singleLine="true"
                android:textSize="@dimen/activity_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="密  码："
                android:textSize="@dimen/activity_text_size"/>

            <EditText
                android:id="@+id/et_register_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请输入登陆密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="@dimen/activity_text_size"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认密码："
                android:textSize="@dimen/activity_text_size"/>

            <EditText
                android:id="@+id/et_register_pass_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请再次输入登陆密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="@dimen/activity_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_register_submit"
                style="@style/button_normal"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="提交"
                android:textSize="@dimen/activity_text_size"/>

            <Button
                android:id="@+id/btn_register_reset"
                style="@style/button_normal"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="重置"
                android:textSize="@dimen/activity_text_size"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>