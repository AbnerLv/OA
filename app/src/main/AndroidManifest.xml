<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzb.oa"
    android:versionCode="1"
    android:versionName="1.0.1">

    <application
        android:name=".ui.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/oa"
        android:label="@string/app_name"
        android:theme="@style/ActionBarTheme">

        <!-- 自己的功能 -->
        <!-- 登陆注册 -->
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.UserLoginActivity"
            android:label="登录"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:label="注册"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme" />
        <activity
            android:name=".ui.activity.SMSRegisterActivity"
            android:label="短信验证"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme" />
        <activity
            android:name=".ui.activity.ForgetPasswordActivity"
            android:label="找回密码"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme" />

        <!-- 主界面 -->
        <activity
            android:name=".ui.activity.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="移动办公"
            android:screenOrientation="portrait"
            />

        <!-- 任务 -->
        <activity
            android:name=".ui.activity.TaskDetailActivity"
            android:label="任务明细"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>

        <!-- 客户 -->
        <activity
            android:name=".ui.activity.CustomerDetailActivity"
            android:label="客户明细"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>

        <!-- 公司 -->
        <activity
            android:name=".ui.activity.MeetingActivity"
            android:label="会议信息"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>
        <activity android:name=".ui.activity.MeetingDetailActivity"
            android:label="会议详细信息"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>
        <activity android:name=".ui.activity.NoticeActivity"
            android:label="通知信息"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>
        <activity android:name=".ui.activity.NoticeDetailActivity"
            android:label="通知详细信息"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>
        <activity android:name=".ui.activity.CompanyContactActivity"
            android:label="公司通信录"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>

        <!-- 设置 -->
        <activity
            android:name=".ui.activity.ShowPerInfoActivity"
            android:label="个人信息"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>

        <activity
            android:name=".ui.activity.EditPerInfoActivity"
            android:label="编辑信息"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>

        <activity
            android:name=".ui.activity.HaveTaskActivity"
            android:label="已领取任务"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>

        <activity
            android:name=".ui.activity.SettingAboutActivity"
            android:label="关于"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>
        <activity
            android:name=".ui.activity.RecommendActivity"
            android:label="应用介绍"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme"/>
        <activity
            android:name=".ui.activity.ModifyPasswordActivity"
            android:label="修改密码"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme" />


    </application>

</manifest>
