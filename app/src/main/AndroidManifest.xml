<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.lzb.oa"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0.1">


    <application
        android:name="com.lzb.oa.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/oa"
        android:label="@string/app_name"
        android:theme="@style/ActionBarTheme">

        <!-- 自己的功能 -->
        <!-- 登陆注册 -->
        <activity
            android:name=".ui.login_resgester.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login_resgester.RegisterActivity"
            android:label="注册">
        </activity>
        <activity
            android:name=".ui.login_resgester.SMSRegisterActivity"
            android:label="短信验证">
        </activity>
        <activity
            android:name=".ui.login_resgester.BackPassword"
            android:label="找回密码">
        </activity>

        <!-- 主界面 -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="移动办公">
        </activity>

        <!-- 任务 -->
        <activity
            android:name=".ui.task.TaskDetail"
            android:label="任务明细">
        </activity>

        <!-- 客户 -->
        <activity
            android:name=".ui.customer.CustomerDetailActivity"
            android:label="客户明细">
        </activity>

        <!-- 公司 -->
        <activity
            android:name=".ui.complany.ComplanyMeeting"
            android:label="会议信息">
        </activity>
        <activity
            android:name=".ui.complany.ComplanyContacts"
            android:label="企业通讯录">
        </activity>
        <activity
            android:name=".ui.complany.ComplanyNotices"
            android:label="企业公告">
        </activity>
        <activity
            android:name=".ui.complany.ComplanyNoticesDetial"
            android:label="公告明细">
        </activity>
        <activity
            android:name=".ui.complany.ComplanyMeetingDetail"
            android:label="会议明细">
        </activity>

        <!-- 设置 -->
        <activity
            android:name=".ui.setting.SettingPerInfo"
            android:label="个人信息">
        </activity>
        <activity
            android:name=".ui.setting.SettingTaskInfo"
            android:label="已领取任务">
        </activity>
        <activity
            android:name=".ui.setting.SettingAbout"
            android:label="关于">
        </activity>
        <activity
            android:name=".ui.setting.SettingAboutRecommend"
            android:label="应用介绍">
        </activity>
        <activity
            android:name=".ui.setting.SettingChangePass"
            android:label="修改密码">
        </activity>
        <activity
            android:name=".ui.setting.EditPerInfo"
            android:label="个人信息">
        </activity>
    </application>

</manifest>