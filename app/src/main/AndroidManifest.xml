<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzb.oa"
    android:versionCode="1"
    android:versionName="1.0.1">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/oa"
        android:label="@string/app_name"
        android:theme="@style/ActionBarTheme">

        <!-- 自己的功能 -->
        <!-- 登陆注册 -->
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.LoginActivity"
            android:label="登录"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:label="注册"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme" />
        <activity
            android:name=".ui.auth.SMSRegisterActivity"
            android:label="短信验证"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme" />
        <activity
            android:name=".ui.auth.BackPasswordActivity"
            android:label="找回密码"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme" />

        <!-- 主界面 -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="移动办公"
            android:screenOrientation="portrait" />

        <!-- 任务 -->
        <activity
            android:name=".ui.task.TaskDetailActivity"
            android:label="任务明细"
            android:screenOrientation="portrait" />

        <!-- 客户 -->
        <activity
            android:name=".ui.customer.CustomerDetailActivity"
            android:label="客户明细"
            android:screenOrientation="portrait" />

        <!-- 公司 -->
        <activity
            android:name=".ui.complany.MeetingActivity"
            android:label="会议信息"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.complany.MeetingDetailActivity"
            android:label="会议详细信息"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.complany.NoticeActivity"
            android:label="通知信息"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.complany.NoticeDetailActivity"
            android:label="通知详细信息"
            android:screenOrientation="portrait"/>

        <!-- 设置 -->
        <activity
            android:name=".ui.setting.ModifyPerInfoActivity"
            android:label="个人信息"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.setting.HaveTaskActivity"
            android:label="已领取任务"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.setting.SettingAboutActivity"
            android:label="关于"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.setting.RecommendActivity"
            android:label="应用介绍"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.setting.ChangePasswdActivity"
            android:label="修改密码"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme" />
        <activity
            android:name=".ui.setting.EditPerInfoActivity"
            android:label="个人信息"
            android:screenOrientation="portrait" />

    </application>

</manifest>
