<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzb.oa"
    android:versionCode="1"
    android:versionName="1.0.1" >

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/oa"
        android:label="@string/app_name"
        android:theme="@style/ActionBarTheme" >
        <!-- 自己的功能 -->
        <!-- 登陆注册 -->
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.LoginActivity"
            android:label="登录"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:label="注册"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarTheme">
        </activity>
        <activity
            android:name=".ui.auth.SMSRegisterActivity"
            android:screenOrientation="portrait"
            android:label="短信验证"
            android:theme="@style/ActionBarTheme">
        </activity>
        <activity
            android:name=".ui.auth.BackPasswordActivity"
            android:screenOrientation="portrait"
            android:label="找回密码"
            android:theme="@style/ActionBarTheme">
        </activity>

        <!-- 主界面 -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="移动办公" >
        </activity>

        <!-- 任务 -->
        <activity
            android:name=".ui.task.TaskDetailActivity"
            android:screenOrientation="portrait"
            android:label="任务明细" >
        </activity>

        <!-- 客户 -->
        <activity
            android:name=".ui.customer.CustomerDetailActivity"
            android:screenOrientation="portrait"
            android:label="客户明细" >
        </activity>

        <!-- 公司 -->


        <!-- 设置 -->
        <activity
            android:name=".ui.setting.SettingPerInfo"
            android:screenOrientation="portrait"
            android:label="个人信息" >
        </activity>
        <activity
            android:name=".ui.setting.SettingTaskInfo"
            android:screenOrientation="portrait"
            android:label="已领取任务" >
        </activity>
        <activity
            android:name=".ui.setting.SettingAbout"
            android:screenOrientation="portrait"
            android:label="关于" >
        </activity>
        <activity
            android:name=".ui.setting.SettingAboutRecommend"
            android:screenOrientation="portrait"
            android:label="应用介绍" >
        </activity>
        <activity
            android:name=".ui.setting.SettingChangePass"
            android:screenOrientation="portrait"
            android:label="修改密码"
            android:theme="@style/ActionBarTheme">
        </activity>
        <activity
            android:name=".ui.setting.EditPerInfo"
            android:screenOrientation="portrait"
            android:label="个人信息" >
        </activity>

    </application>

</manifest>
